<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginEnd="@dimen/margenRightChat"
    android:layout_marginStart="@dimen/margenRightChat"
    android:id="@+id/balloon_left">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/balloon_left"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingEnd="10dp"
        android:paddingStart="30dp"
        android:paddingTop="5dp"
        app:layout_constraintStart_toStartOf="parent">

    <util.ResizableImageView
        android:contentDescription="@string/guideMessage"
        android:id="@+id/imageContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textViewContent"
        android:autoLink="web"
        android:linksClickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_size_chat"/>

        <TextView
            android:id="@+id/textViewTranslation"
            android:autoLink="web"
            android:linksClickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textTranslation"
            android:visibility="gone"
            android:textSize="@dimen/text_size_chat" />

    <TextView
        android:id="@+id/textViewDateTime"
        style="@style/Base.TextAppearance.AppCompat.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="12dp"
        android:textColor="@color/textColor" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>